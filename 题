#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
int add(int n);
int main()
{
	int n = 0;
	int sum = 0;
	printf("请输入n的值:");
	scanf_s("%d", &n);
	sum = add(n);
	if (sum == -1)
	{
		printf("请输入正确的值\n");
	}
	else 
	{
		printf("1+2+3+...+%d的值：%d\n", n, sum);
	}
	
	return 0;

}
int add(int n)
{
	int i=0;
	int s=0;
	if (n < 0)
	{
		printf("形式参数不正确\n");
		return -1;
	}
	for (i = 1; i <= n; i++)
	{
		s = s + i;
	}
	return s;

}
