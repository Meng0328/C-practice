#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#define SIZE 5
void input(int a[], int len);
void output(int a[], int len);
int main()
{
	int arr[SIZE] = { 90,85,80,75,70 };
	input(arr,SIZE);
	output(arr,SIZE);
	return 0;
}
void input(int a[], int len)
{
	int i = 0;
	for (i = 0; i <len; i++)
	{
		printf("请输入第%d的值：",i+1);
		scanf("%d", &a[i]);
	}
}
void output(int a[], int len)
{
	int i = 0;
	for (i = 0; i < len; i++)
	{
		printf("第%d个的数据：%d\n", i + 1, a[i]);
	}
}
